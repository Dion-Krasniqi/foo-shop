<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!-- Commands -->
        <service id="Foo\Command\ExampleCommand" >
            <tag name="console.command" />
            <argument type="service" id="kernel" />
            <argument type="service" id="product.repository" />
        </service>
        <service id="Foo\Command\ExampleShowClassCommand" >
            <tag name="console.command" />
            <argument type="service" id="example.repository" />
        </service>
        <service id="Foo\Command\ExampleListCommand" >
            <tag name="console.command" />
            <argument type="service" id="example.repository" />
        </service>
        <service id="Foo\Command\ExampleCreateCommand" >
            <tag name="console.command" />
            <argument type="service" id="example.repository" />
        </service>
        <service id="Foo\Command\ExampleDeleteCommand" >
            <tag name="console.command" />
            <argument type="service" id="example.repository" />
        </service>
        <service id="Foo\Command\ExamplePushStockCommand">
            <tag name="console.command" />
            <argument type="service" id="product.repository" />
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService" />
        </service>



        <service id="Foo\Service\ScheduledTask\ExampleTask">
            <tag name="shopware.scheduled.task" />
        </service>
        <service id="Foo\Service\ScheduledTask\ExampleTaskHandler">
            <argument type="service" id="scheduled_task.repository" />
            <argument type="service" id="logger" />
            <tag name="message.message_handler" />
        </service>

        <service id="Foo\Storefront\Controller\ExampleController" public="true">
            <argument type="service" id="product.repository" />
            <argument type="service" id="Shopware\Core\Checkout\Cart\LineItemFactoryRegistry" />
            <argument type="service" id="Shopware\Core\Checkout\Cart\SalesChannel\CartService" />
            <call method="setContainer">
                <argument type="service" id="service_container" />

            </call>
        </service>
        <service id="Foo\Storefront\Route\Response\ExampleResponse" >
            <argument type="service" id="example.repository" />

        </service>

        <service id="Foo\Subscriber\MySubscriber">
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService" />
            <argument type="service" id="product.repository" />
            <tag name="kernel.event_subscriber" />
        </service>
        <service id="Foo\Service\ExampleService">
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService" />
        </service>
        <!-- custom entity registering -->
        <service id="Foo\Core\Content\Example\ExampleDefinition">
            <tag name="shopware.entity.definition" entity="example"/>
        </service>
    </services>
</container>